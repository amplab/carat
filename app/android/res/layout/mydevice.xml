<?xml version="1.0" encoding="utf-8"?>
<!--
Carat My Device Screen layout
@author Eemil Lagerspetz
-->
<edu.berkeley.cs.amplab.carat.android.ui.FixedViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFlipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/background"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dip" 
                    android:layout_marginBottom="5dip" >

                    <TextView
                        android:id="@+id/jscore_legend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jscore"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="32sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/updated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/updated0"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <TextView
                    android:id="@+id/jscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/jsna"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="48sp"
                    android:textColor="@color/cyan" />
                
                <ImageView
                    android:id="@+id/jscore_info"
                    android:layout_width="24dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/moreinfo"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_marginBottom="3dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/battery_life_legend"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/batterylife"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/battery_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="@string/zeroh"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                     />
                <!-- android:fontFamily="sans-serif-condensed" -->
                
				<ImageView
                    android:id="@+id/battery_life_info"
                    android:layout_width="24dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/moreinfo"
                    android:src="@drawable/arrow" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="3dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/carat_id_legend"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/caratid"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/carat_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dip"
                    android:gravity="right"
                    android:text="@string/fake_id"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />
                <!-- android:onClick="copyCaratId"  -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="3dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/os_version_legend"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/osver"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/os_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="@string/fake_os"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />
                
                 <ImageView
                    android:id="@+id/os_info"
                    android:layout_width="24dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/moreinfo"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="6dip" 
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/device_legend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/dev"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/device"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/fake_device"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />
                
                 <ImageView
                    android:id="@+id/device_info"
                    android:layout_width="24dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/moreinfo"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/running_apps"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/running_apps"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/view_processes_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/viewprocess"
                    android:background="@drawable/button" />
                <!-- The above background for this element is a custom defined background ("shape").
                It is defined in our custom files drawable/button.xml, button_enabled.xml, 
                button_pressed.xml, button_focused.xml, and button_disabled.xml
				(all in the "drawable" folder). We also created a custom style for our custom buttons
				in values/styles.xml, and then set this custom style as the default button style
				in our application theme (in values/themes.xml under our in-use style element) -->
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" 
                        android:layout_marginBottom="4dp" >

                        <TextView
                            android:id="@+id/memory_used_legend"
                            android:layout_width="130dip"
                             android:layout_height="wrap_content"
                            android:text="@string/memused"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/gray" />

                        <ProgressBar
                            android:id="@+id/memory_used_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/custom_progressbar" 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="56" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" 
                        android:layout_marginBottom="4dp" >

                        <TextView
                            android:id="@+id/memory_active_legend"
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:text="@string/memactive"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/gray" />

                        <ProgressBar
                            android:id="@+id/memory_active_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/custom_progressbar" 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:progress="5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/cpu_usage_legend"
                            android:layout_width="130dip"
                            android:layout_height="wrap_content"
                            android:text="@string/cpu"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/gray" />

                        <ProgressBar
                            android:id="@+id/cpu_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/custom_progressbar" 
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:progress="5" />
                    </LinearLayout>
                    
                </LinearLayout>

                <ImageView
                    android:id="@+id/memory_info"
                    android:layout_width="24dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/moreinfo"
                    android:src="@drawable/arrow" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/alogo"
                    android:src="@drawable/twologo" />
            </LinearLayout>
            
        </LinearLayout>

    </ScrollView>
    
    <edu.berkeley.cs.amplab.carat.android.ui.LocalizedWebView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/memoryView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </edu.berkeley.cs.amplab.carat.android.ui.LocalizedWebView>

</edu.berkeley.cs.amplab.carat.android.ui.FixedViewFlipper>